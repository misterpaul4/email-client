# Build the docker image with `npx nx docker-build email-client`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t email-client`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system email-client && \
          adduser --system -G email-client email-client

COPY dist/apps/email-client email-client/
RUN chown -R email-client:email-client .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix email-client --omit=dev -f install

CMD [ "node", "email-client" ]
